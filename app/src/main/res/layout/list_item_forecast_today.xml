<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/list_item_forecast_textView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:minHeight="?android:attr/listPreferredItemHeight"
              android:gravity="center_vertical"
              android:paddingTop="16dp"
              android:paddingBottom="16dp"
              android:paddingRight="16dp"
              android:background="@color/sunshine_blue"

    >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="60dp"
        >
        <TextView
            android:id="@+id/list_item_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/forecast_today_text_size_small"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/list_item_high_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/forecast_today_high_temp_size"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/list_item_low_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/forecast_today_low_temp_size"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/list_item_icon"
            android:layout_width="@dimen/forecast_today_icon_width"
            android:layout_height="@dimen/forecast_today_icon_width"
            android:contentDescription="@string/list_icon_description"
            />

        <TextView
            android:id="@+id/list_item_forecast_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/forecast_today_text_size_small"
            />
    </LinearLayout>

</LinearLayout>
